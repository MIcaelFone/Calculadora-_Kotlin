<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9DE6B8"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/subtracao"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="158dp"
        android:layout_height="72dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="20dp"
        android:text="Subtração"
        app:layout_constraintBottom_toTopOf="@+id/divisao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soma"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/divisao"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="173dp"
        android:text="Divisão"
        app:layout_constraintBottom_toTopOf="@+id/multiplicacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtracao"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/multiplicacao"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="161dp"
        android:layout_height="63dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="260dp"
        android:text="Multiplicação"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divisao"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/soma"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="62dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="-10dp"
        android:text="Soma"
        app:layout_constraintBottom_toTopOf="@+id/subtracao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/clean"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="120dp"
        android:text="Limpeza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divisao" />

    <EditText
        android:id="@+id/valor1"
        android:layout_width="112dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Valor 1"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#090808"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/valor2"
        android:layout_width="113dp"
        android:layout_height="74dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Valor 2"
        android:inputType="numberDecimal"
        android:textColor="#151313"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/resultado"
        style="@style/Widget.MaterialComponents.TimePicker.Display.TextInputEditText"
        android:layout_width="142dp"
        android:layout_height="74dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="100dp"
        android:breakStrategy="simple"
        android:clickable="false"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:hint="Resultado"
        android:hyphenationFrequency="normal"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="201dp"
        android:layout_height="37dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif-black"
        android:text="Calculadora"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>